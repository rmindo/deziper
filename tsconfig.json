{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@data/*": ["./src/data/*"],
      "@types/*": ["./src/types/*"],
      "@pages/*": ["./src/react/pages/*"],
      "@components/*": ["./src/react/components/*"],
    },
    "strict": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "./build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
  },
  "files": [
    "vindo.json",
    "package.json"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
